{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "cargo build",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/rbase"
            }
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "cargo run -- ${workspaceFolder}/data/Image-arm32",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/rbase"
            }
        },
        {
            "label": "Pretty",
            "type": "shell",
            "command": "cargo fmt",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/rbase"
            }
        },
    ]
}